@model Learning.WebSite.Models.ClassListModel
@{
    ViewBag.Title = "Classes Available";
}

<style>
    .topmain {
        background-color: gainsboro;
        padding-top: 20px;
        padding-left: 20px;
        padding-bottom: 20px;
        text-anchor: start;
    }
</style>
<div class="topmain">
    <h1>The Learning Center</h1>
    The Place For Technology Classes.
    <br />
    <br />

</div>


<h1>Classes</h1>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Enroll</th>
    </tr>
    @foreach (var classx in Model.Classes)
    {
        <tr>
            <td>@classx.Name</td>
            <td>@classx.Description</td>
            <td>@classx.Price.ToString("c")</td>
            <td><a asp-action="studentclasses" asp-route-id="@classx.Id">Enroll Now!</a></td>


        </tr>

    }
</table>
